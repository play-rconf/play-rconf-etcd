# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
spaces_around_operators = true

[*.java]
indent_size = 4

[*.xml]
indent_size = 4

[*.yml]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
